<h1>Message from <%= @message.author %></h1>
</hr>
<p><%= @message.content  %> <a href="<%= @message.url  %>"><%= @message.url  %></a></p>
<p><em><small>posted at <%= @message.created_at  %></small></em></p>
<hr/>
</hr>
<h1>Other messages from this author:</h1>
<% @all_messages.each do |message| %>
  <div class="message">
    <h3><a href="/messages/<%= message.id %>"><%= message.content %></a></h3>
    <p>
      <em>by <%= message.author %></em> <a href="<%= message.url %>"><%= message.url %></a>
    </p>
  </div>
<% end %>
<hr/>

<a href="/messages">Back to All Messages</a>
